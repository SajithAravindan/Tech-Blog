{{!-- Create New Post Button --}}
<br>
<section class="new-post-section">
    <button type="submit" id="btnNewPost">+ Create new post</button>
</section>
<br>
{{!-- Displays all the Posts related to the logged in User --}}
{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>    
        {{#each posts as |postitem|}}       
            {{> post postitem}}
            <div class="container blogBoxed">
            <a href="/dashboard/edit/{{postitem.id}}">Edit Post</a> </div>      
        {{/each}}    
</section>
{{/if}}
{{!-- Calls the JS File to call the related route for creation of new post --}}
<script src="/js/createpost.js"></script>